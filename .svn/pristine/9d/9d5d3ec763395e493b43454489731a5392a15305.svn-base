// 全局布局样式
.g-home-layout {
  width: 100%;
  height: 100%;
  position: relative;

  &-top {
    position: absolute;
    width: 100%;
    height: 99px;
    left: 0;
    top: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.8);
  }

  &-left {
    position: absolute;
    width: 324px;
    height: calc(100% - 101px);
    left: 0;
    top: 101px;
    z-index: 1000;
  }
}

.g-layout {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex: auto;

  &-left {
    position: relative;
    transition: all 0.3s ease-in-out;
    display: flex;
    flex-direction: column;
    flex: 0 0 320px;
    width: 320px;
    height: 100%;
  }

  &-main {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    transition: all 0.5s ease-in-out;
    display: flex;
    flex-direction: column;
  }
}

// 登录
.g-login {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #e6e6e6;

  &-view {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    box-shadow: 0px 0px 10px #999;
  }
}

//组织树结构
.g-organize-layout {
  display: flex;
  flex-direction: row;
  flex: auto;
  margin: 20px;
}

.g-organize-left {
  position: relative;
  display: flex;
  flex-direction: column;
  flex: 0 0 260px;
  width: 260px;
  margin-right: 20px;
  padding-top: 10px;
  background: #fff;
}

.g-organize-main {
  position: relative;
  width: 100%;
  height: 100%;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.g-pagination {
  text-align: center;
  padding: 20px 0px;
}

.g-table {
  margin: 0px 20px;
}

.g-userWrap {
