<script>
  import { mapActions } from 'vuex';
  export default {
    data() {
      return {
        title: ['人员', '装备', '器材'],
        indexed: 0,
        userList: [],
        equipmentList: [],
        carList: []
      };
    },
    created() {
      this.getFieldServiceList();
    },
    methods: {
      ...mapActions(['_getInfo']),
      tabFn(index) {
        this.indexed = index
      },
      getFieldServiceList() {
        this._getInfo({
          ops: {},
          api: 'szlFieldList',
          callback: res => {
            this.userList = res.userList;
            this.equipmentList = res.equipment;
            this.carList = res.carList;
          }
        });
      },
      maskFn() {
        this.$emit('onClose')
      }
    }
  };
</script>

